<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Diary App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .form-group {
            margin-bottom: 15px;
        }

        .navbar {
            justify-content: center;
        }

        .navbar-nav {
            flex-direction: row;
        }

            .navbar-nav .nav-item {
                margin-left: 15px;
                margin-right: 15px;
            }

        .container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Diary App</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (Context.Session.GetString("UserEmail") != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Profile">@Context.Session.GetString("UserName") (@Context.Session.GetString("UserEmail"))</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Sign Up</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
