@page
@model Diary_Client.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/diary.css" />

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card p-4" style="width: 100%; max-width: 500px;">
        <h2 class="text-center mb-4" style="font-size: 1.5rem;">Login</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Email" style="font-size: 1rem;">Email</label>
                <input asp-for="Input.Email" class="form-control" style="font-size: 1rem;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" style="font-size: 1rem;">Password</label>
                <input asp-for="Input.Password" class="form-control" style="font-size: 1rem;" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block" style="font-size: 1rem;">Login</button>
        </form>
    </div>
</div>
