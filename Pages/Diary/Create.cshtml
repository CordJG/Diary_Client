@page
@model Diary_Client.Pages.Diary.CreateModel

@{
    ViewData["Title"] = "Create New Diary";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/diary.css" />

<div class="container">
    <form method="post">
        <div class="header">
            <img src="~/images/catDiary.png" alt="Diary Icon" />
            <div>
                <input type="text" asp-for="Diary.Title" placeholder="Title" />
                <div>
                    <label asp-for="Diary.DiaryDate">Date: </label>
                    <input type="date" asp-for="Diary.DiaryDate" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <textarea asp-for="Diary.Content" placeholder="Write your diary here..."></textarea>
        </div>

        <div class="form-group form-check">
            <input asp-for="Diary.IsPrivate" class="form-check-input" type="checkbox" />
            <label asp-for="Diary.IsPrivate" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
