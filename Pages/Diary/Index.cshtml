@page
@model Diary_Client.Pages.Diary.IndexModel

@{
    ViewData["Title"] = "My Diaries";
}

<link rel="stylesheet" href="~/css/index.css" />

<h2>My Diaries</h2>

<a class="btn btn-primary" asp-page="./Create">Create New Diary</a>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Is Private</th>
            <th>Actions</th> <!-- Actions 열 추가 -->
        </tr>
    </thead>
    <tbody>
        @foreach (var diary in Model.Diaries)
        {
            <tr>
                <td class="date">@diary.DiaryDate.ToString("yyyy-MM-dd")</td>
                <td class="title" style="width: 50%;">
                    <a asp-page="./Detail" asp-route-id="@diary.Id">@diary.Title</a>
                </td>
                <td class="is-private">@(diary.IsPrivate ? "✔" : "")</td>
                <td class="actions">
                    <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@diary.Id">수정</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@diary.Id" onsubmit="return confirm('정말 삭제하시겠습니까?');">
                        <button type="submit" class="btn btn-sm btn-danger">삭제</button>
                    </form>
                </td> <!-- Actions 열에 수정 및 삭제 버튼 추가 -->
            </tr>
        }
    </tbody>
</table>
