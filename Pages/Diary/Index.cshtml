@page
@model Diary_Client.Pages.Diary.IndexModel

@{
    ViewData["Title"] = "My Diaries";
}

<h2>My Diaries</h2>

<a class="btn btn-primary" asp-page="./Create">Create New Diary</a>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Content</th>
            <th>Is Private</th>
            <th>Actions</th> <!-- Actions 열 추가 -->
        </tr>
    </thead>
    <tbody>
        @foreach (var diary in Model.Diaries)
        {
            <tr>
                <td>@diary.DiaryDate.ToString("yyyy-MM-dd")</td>
                <td>@diary.Title</td>
                <td>@diary.Content</td>
                <td>@diary.IsPrivate</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@diary.Id">Edit</a>
                    <button type="button" class="btn btn-sm btn-danger" onclick="deleteDiary(@diary.Id)">Delete</button>
                </td> <!-- Actions 열에 수정 및 삭제 버튼 추가 -->
            </tr>
        }
    </tbody>
</table>